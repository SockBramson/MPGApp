<MPGCalculator>:    
    orientation: 'vertical'
    GridLayout:
        cols: 2
        row_default_height: "40dp"
        row_force_default: True
        Label:
            text: "Miles"
        TextInput:
            id: miles_input
        Button:
            size_hint_y: None
            height: "40dp"
            text: "Enter"
            on_press: root.MPGCalculatorApp()
